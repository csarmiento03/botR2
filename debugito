import vis as vis

arch = "lab10.txt"
laberinto = vis.MazeForVisualization()
laberinto.loadMazeFile(arch)
arch = "botpath.txt"
bot = vis.RegularPolygonBot(numVertices=3, faceColor="r")
#bot = vis.RegularPolygonBot()
bot.loadPath(arch)
#bot.orientation = 1
vv = vis.Visualizer(laberinto, bot, 2, "pepe", None, None)
#vv.showMaze(xkcd=True)
vv.animator()

#vv.showMaze(xkcd=False, colorWall="r", entryColor="magenta" ,exitColor="y")
