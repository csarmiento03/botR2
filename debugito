import vis as vis

arch = "lab10.txt"
laberinto = vis.MazeForVisualization()
laberinto.loadMazeFile(arch)
arch = "botpath.txt"
bot = vis.RegularPolygonBot(numVertices=3, faceColor="r")
#bot = vis.RegularPolygonBot()
bot.loadPath(arch)
bot.smoothingPath(frames=5)


#bot.orientation = 1
vv = vis.Visualizer(laberinto, bot, 2, mediaFilename="resolucion")

#vv.showMaze(xkcd=True)
mazeTuple=(True, "k", "palegreen", "lightcoral")
fps=10
vv.animator(mazeTuple, fps)

#vv.showMaze(xkcd=False, colorWall="r", entryColor="magenta" ,exitColor="y")
